{% extends 'admin/base.html.twig' %}

{% block title %}Nouvelle langue - Administration{% endblock %}

{% block admin_content %}
<div class="language-form">
    <div class="page-header">
        <h2>Ajouter une nouvelle langue</h2>
        <a href="{{ path('admin_language_index') }}" class="btn btn-secondary">← Retour</a>
    </div>

    <div class="card">
        <form method="post">
            <div class="form-group">
                <label for="code">Code de la langue *</label>
                <input type="text" 
                       id="code" 
                       name="code" 
                       class="form-control" 
                       placeholder="ex: fr, en, es" 
                       maxlength="10" 
                       required>
                <small class="form-text">Code ISO de la langue (2-5 caractères)</small>
            </div>

            <div class="form-group">
                <label for="name">Nom de la langue *</label>
                <input type="text" 
                       id="name" 
                       name="name" 
                       class="form-control" 
                       placeholder="ex: Français, English, Español" 
                       maxlength="255" 
                       required>
            </div>

            <div class="form-group">
                <div class="form-check">
                    <input type="checkbox" 
                           id="is_default" 
                           name="is_default" 
                           class="form-check-input">
                    <label for="is_default" class="form-check-label">
                        Définir comme langue par défaut
                    </label>
                    <small class="form-text">
                        Si cochée, cette langue deviendra la langue de référence du site.
                    </small>
                </div>
            </div>

            <div class="form-actions">
                <button type="submit" class="btn btn-primary">Créer la langue</button>
                <a href="{{ path('admin_language_index') }}" class="btn btn-secondary">Annuler</a>
            </div>
        </form>
    </div>

    <div class="help-section">
        <h3>Codes de langues courants</h3>
        <div class="language-examples">
            <div class="language-example">
                <strong>fr</strong> - Français
            </div>
            <div class="language-example">
                <strong>en</strong> - English
            </div>
            <div class="language-example">
                <strong>es</strong> - Español
            </div>
            <div class="language-example">
                <strong>de</strong> - Deutsch
            </div>
            <div class="language-example">
                <strong>it</strong> - Italiano
            </div>
            <div class="language-example">
                <strong>pt</strong> - Português
            </div>
        </div>
    </div>
</div>

<style>
.language-form {
    padding: 1rem;
    max-width: 600px;
}

.page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
}

.page-header h2 {
    margin: 0;
    color: #333;
}

.form-text {
    display: block;
    margin-top: 0.25rem;
    color: #6c757d;
    font-size: 0.875rem;
}

.form-check {
    margin-bottom: 1rem;
}

.form-check-input {
    margin-right: 0.5rem;
}

.form-check-label {
    margin-bottom: 0;
    font-weight: 500;
}

.form-actions {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
    padding-top: 1rem;
    border-top: 1px solid #dee2e6;
}

.help-section {
    margin-top: 2rem;
    padding: 1.5rem;
    background: #f8f9fa;
    border-radius: 8px;
    border: 1px solid #dee2e6;
}

.help-section h3 {
    margin-bottom: 1rem;
    color: #495057;
    font-size: 1.1rem;
}

.language-examples {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: 0.5rem;
}

.language-example {
    padding: 0.5rem;
    background: white;
    border-radius: 4px;
    border: 1px solid #dee2e6;
    font-size: 0.875rem;
}

.language-example strong {
    color: #007bff;
}

@media (max-width: 768px) {
    .language-form {
        max-width: 100%;
    }
    
    .page-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }
    
    .form-actions {
        flex-direction: column;
    }
    
    .language-examples {
        grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
    }
}
</style>
{% endblock %}
