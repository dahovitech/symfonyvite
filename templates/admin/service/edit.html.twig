{% extends 'admin/base.html.twig' %}

{% block title %}Éditer le service - Administration{% endblock %}

{% block admin_content %}
<div class="service-form">
    <div class="page-header">
        <h2>Éditer le service</h2>
        <div class="header-actions">
            {% if service.isPublished %}
                <a href="{{ path('service_show', {slug: service.slug}) }}" 
                   class="btn btn-info btn-sm" 
                   target="_blank">Voir sur le site</a>
            {% endif %}
            <a href="{{ path('admin_service_index') }}" class="btn btn-secondary">← Retour</a>
        </div>
    </div>

    <form method="post" class="service-form-content">
        <div class="card">
            <div class="card-header">
                <h3>Informations générales</h3>
            </div>
            <div class="card-body">
                <div class="form-group">
                    <label for="slug">Slug du service *</label>
                    <input type="text" 
                           id="slug" 
                           name="slug" 
                           class="form-control" 
                           value="{{ service.slug }}"
                           required>
                    <small class="form-text">
                        Identifiant unique du service (sera utilisé dans l'URL).
                    </small>
                </div>

                <div class="form-group">
                    <div class="form-check">
                        <input type="checkbox" 
                               id="is_published" 
                               name="is_published" 
                               class="form-check-input"
                               {% if service.isPublished %}checked{% endif %}>
                        <label for="is_published" class="form-check-label">
                            Service publié
                        </label>
                        <small class="form-text">
                            Décochez pour mettre le service en brouillon.
                        </small>
                    </div>
                </div>

                <div class="service-meta">
                    <div class="meta-item">
                        <strong>Créé le:</strong> {{ service.createdAt|date('d/m/Y à H:i') }}
                    </div>
                    {% if service.updatedAt %}
                        <div class="meta-item">
                            <strong>Modifié le:</strong> {{ service.updatedAt|date('d/m/Y à H:i') }}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3>Contenu multilingue</h3>
            </div>
            <div class="card-body">
                <div class="language-tabs">
                    {% for language in languages %}
                        {% set translation = service.getTranslation(language) %}
                        <button type="button" 
                                class="language-tab {% if loop.first %}active{% endif %}" 
                                data-lang="{{ language.code }}">
                            {{ language.name }}
                            {% if language.isDefault %}
                                <span class="default-indicator">*</span>
                            {% endif %}
                            {% if translation and translation.hasContent %}
                                <span class="translation-indicator">✓</span>
                            {% endif %}
                        </button>
                    {% endfor %}
                </div>

                {% for language in languages %}
                    {% set translation = service.getTranslation(language) %}
                    <div class="language-content {% if loop.first %}active{% endif %}" 
                         id="content-{{ language.code }}">
                        <h4>{{ language.name }}</h4>
                        
                        <div class="form-group">
                            <label for="title_{{ language.code }}">
                                Titre
                                {% if language.isDefault %}<span class="required">*</span>{% endif %}
                            </label>
                            <input type="text" 
                                   id="title_{{ language.code }}" 
                                   name="title_{{ language.code }}" 
                                   class="form-control" 
                                   value="{{ translation ? translation.title : '' }}"
                                   {% if language.isDefault %}required{% endif %}>
                        </div>

                        <div class="form-group">
                            <label for="description_{{ language.code }}">Description courte</label>
                            <textarea id="description_{{ language.code }}" 
                                    name="description_{{ language.code }}" 
                                    class="form-control" 
                                    rows="3">{{ translation ? translation.description : '' }}</textarea>
                        </div>

                        <div class="form-group">
                            <label for="detail_{{ language.code }}">Contenu détaillé</label>
                            <textarea id="detail_{{ language.code }}" 
                                    name="detail_{{ language.code }}" 
                                    class="form-control" 
                                    rows="8">{{ translation ? translation.detail : '' }}</textarea>
                        </div>

                        {% if translation %}
                            <div class="translation-status">
                                <span class="badge badge-success">
                                    Traduction disponible
                                </span>
                            </div>
                        {% else %}
                            <div class="translation-status">
                                <span class="badge badge-secondary">
                                    Aucune traduction
                                </span>
                            </div>
                        {% endif %}
                    </div>
                {% endfor %}

                {% if languages|length == 0 %}
                    <div class="alert alert-warning">
                        Aucune langue n'est configurée. 
                        <a href="{{ path('admin_language_new') }}">Créez d'abord une langue</a> 
                        pour pouvoir ajouter du contenu.
                    </div>
                {% endif %}
            </div>
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Sauvegarder</button>
            <a href="{{ path('admin_service_index') }}" class="btn btn-secondary">Annuler</a>
        </div>
    </form>

    <div class="danger-zone">
        <h3>Zone de danger</h3>
        <p>Actions irréversibles pour ce service.</p>
        
        <form method="post" 
              action="{{ path('admin_service_delete', {id: service.id}) }}" 
              onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce service ? Cette action supprimera également toutes les traductions associées.')">
            <button type="submit" class="btn btn-danger">
                Supprimer ce service
            </button>
        </form>
    </div>
</div>

<style>
.service-form {
    padding: 1rem;
    max-width: 800px;
}

.page-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
}

.page-header h2 {
    margin: 0;
    color: #333;
}

.header-actions {
    display: flex;
    gap: 0.5rem;
}

.service-form-content {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.card-header {
    background: #f8f9fa;
    padding: 1rem;
    border-bottom: 1px solid #dee2e6;
    border-radius: 8px 8px 0 0;
}

.card-header h3 {
    margin: 0;
    color: #495057;
    font-size: 1.1rem;
}

.card-body {
    padding: 1.5rem;
}

.service-meta {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #dee2e6;
}

.meta-item {
    margin-bottom: 0.5rem;
    color: #6c757d;
    font-size: 0.875rem;
}

.form-text {
    display: block;
    margin-top: 0.25rem;
    color: #6c757d;
    font-size: 0.875rem;
}

.form-check {
    margin-bottom: 1rem;
}

.form-check-input {
    margin-right: 0.5rem;
}

.form-check-label {
    margin-bottom: 0;
    font-weight: 500;
}

.language-tabs {
    display: flex;
    flex-wrap: wrap;
    border-bottom: 1px solid #dee2e6;
    margin-bottom: 1.5rem;
}

.language-tab {
    padding: 0.75rem 1rem;
    border: none;
    background: none;
    cursor: pointer;
    border-bottom: 2px solid transparent;
    transition: all 0.3s;
    font-weight: 500;
    position: relative;
}

.language-tab:hover {
    background-color: #f8f9fa;
}

.language-tab.active {
    border-bottom-color: #007bff;
    color: #007bff;
    background-color: #f8f9fa;
}

.default-indicator {
    color: #dc3545;
    font-weight: bold;
}

.translation-indicator {
    color: #28a745;
    font-weight: bold;
    margin-left: 0.5rem;
}

.language-content {
    display: none;
}

.language-content.active {
    display: block;
}

.language-content h4 {
    margin-bottom: 1.5rem;
    color: #495057;
    font-size: 1.1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #dee2e6;
}

.required {
    color: #dc3545;
}

.translation-status {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid #dee2e6;
}

.badge {
    padding: 0.25rem 0.5rem;
    border-radius: 4px;
    font-size: 0.875rem;
    font-weight: 500;
}

.badge-success {
    background-color: #28a745;
    color: white;
}

.badge-secondary {
    background-color: #6c757d;
    color: white;
}

.form-actions {
    display: flex;
    gap: 1rem;
    padding-top: 2rem;
    border-top: 1px solid #dee2e6;
}

.danger-zone {
    margin-top: 2rem;
    padding: 1.5rem;
    background: #f8d7da;
    border: 1px solid #f5c6cb;
    border-radius: 8px;
}

.danger-zone h3 {
    margin-bottom: 1rem;
    color: #721c24;
    font-size: 1.1rem;
}

.danger-zone p {
    color: #721c24;
    margin-bottom: 1rem;
}

.alert {
    padding: 1rem;
    border-radius: 8px;
    margin-bottom: 1rem;
}

.alert-warning {
    background-color: #fff3cd;
    border: 1px solid #ffeaa7;
    color: #856404;
}

.alert a {
    color: #856404;
    font-weight: 500;
}

@media (max-width: 768px) {
    .service-form {
        max-width: 100%;
        padding: 0.5rem;
    }
    
    .page-header {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
    }
    
    .header-actions {
        align-self: stretch;
        justify-content: space-between;
    }
    
    .language-tabs {
        flex-direction: column;
    }
    
    .language-tab {
        text-align: left;
        border-bottom: 1px solid #dee2e6;
        border-right: none;
    }
    
    .language-tab.active {
        border-bottom-color: #dee2e6;
        border-left: 3px solid #007bff;
    }
    
    .form-actions {
        flex-direction: column;
    }
}
</style>
{% endblock %}
