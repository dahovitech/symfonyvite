{% extends 'base.html.twig' %}

{% block body %}
<div class="admin-container">
    <header class="admin-header">
        <h1>Administration - CMS Multilingue</h1>
    </header>

    <nav class="admin-nav">
        <a href="{{ path('admin_dashboard') }}" 
           class="{% if app.request.get('_route') == 'admin_dashboard' %}active{% endif %}">
            Tableau de bord
        </a>
        <a href="{{ path('admin_language_index') }}" 
           class="{% if app.request.get('_route') starts with 'admin_language' %}active{% endif %}">
            Langues
        </a>
        <a href="{{ path('admin_service_index') }}" 
           class="{% if app.request.get('_route') starts with 'admin_service' %}active{% endif %}">
            Services
        </a>
        <a href="{{ path('home') }}">Voir le site</a>
    </nav>

    <main class="admin-content">
        {% block admin_content %}{% endblock %}
    </main>
</div>
{% endblock %}
